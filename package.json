{
    "name": "notes",
    "description": "A Note Taking App",
    "version": "1.0.0",
    "author": "James Hall",
    "license": "ISC",
    "main": "src",
    "nodemonConfig": {
        "restartable": "rs",
        "ignore": [
            "*.test.js",
            ".git",
            "node_modules/**/node_modules",
            ".vscode/",
            ".idea/",
            ".github/",
            "test/",
            "docs/",
            "coverage/",
            "docker-compose.*",
            "DOCS.md",
            "README.md",
            "Dockerfile",
            ".dockerignore",
            ".nvmrc",
            ".gitmodules",
            "front-end/"
        ],
        "verbose": false,
        "nodeArgs": [
            "--inspect=0.0.0.0:5858",
            "--nolazy"
        ]
    },
    "scripts": {
        "start": "export NODE_ENV=production && pm2 start ./src/index.js",
        "dev": "export NODE_ENV=localDev && npm run migrate && ./node_modules/nodemon/bin/nodemon.js -L ./src/index.js",
        "docker:dev": "export NODE_ENV=dockerDev && npm run migrate:undo && npm run migrate && ./node_modules/nodemon/bin/nodemon.js -L ./src/index.js",
        "lint": "standard",
        "test": "jest",
        "local:debugTests": "export NODE_ENV=localTest && node ./node_modules/jest/bin/jest.js",
        "local:systemTests": "export NODE_ENV=localTest && ./node_modules/.bin/sequelize db:migrate:undo:all && ./node_modules/.bin/sequelize db:migrate && ./node_modules/.bin/sequelize db:seed:undo:all && ./node_modules/.bin/sequelize db:seed:all && standard --fix && ./node_modules/.bin/jest -i --forceExit --detectOpenHandles",
        "docker:systemTests": "export NODE_ENV=dockerTest && npm run migrate & standard --fix && ./node_modules/.bin/jest -i --forceExit",
        "coverage": "export NODE_ENV=localTest && npm run migrate && standard --fix && ./node_modules/.bin/jest -i --forceExit --coverage",
        "postcoverage": "opn coverage/lcov-report/index.html",
        "docs": "apidoc -i ./src/ -o docs && apidoc-markdown -p docs -o DOCS.md",
        "postdocs": "opn docs/index.html",
        "migrate:undo": "./node_modules/.bin/sequelize db:migrate:undo:all",
        "migrate": "./node_modules/.bin/sequelize db:migrate",
        "dockerContainer:dev": "export NODE_ENV=dockerDev && docker-compose -f docker-compose.yml -f up"
    },
    "jest": {
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/vscode/",
            "/front-end",
            "/coverage/",
            "/github/"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js"
    },
    "standard": {
        "globals": [
            "describe",
            "test",
            "jasmine",
            "beforeEach",
            "afterEach",
            "beforeAll",
            "afterAll",
            "sequelize",
            "expect"
        ]
    },
    "keywords": [
        "express",
        "node",
        "node.js",
        "postgresql",
        "sequelize",
        "es6",
        "es7",
        "es8",
        "es2017",
        "jest",
        "istanbul",
        "nyc",
        "REST",
        "API"
    ],
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "bluebird": "^3.5.4",
        "body-parser": "^1.18.3",
        "chalk": "^2.4.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.16.4",
        "express-force-ssl": "^0.3.2",
        "express-rate-limit": "^3.4.1",
        "helmet": "^3.16.0",
        "lodash": "^4.17.11",
        "morgan": "^1.9.1",
        "npm-check-updates": "^3.1.8",
        "pg": "7.9.0",
        "pg-hstore": "^2.3.2",
        "pm2": "^3.5.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "request-promise-native": "^1.0.7",
        "sequelize": "^5.6.0",
        "sequelize-cli": "^5.4.0",
        "uuid": "^3.3.2",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "apidoc": "^0.17.7",
        "apidoc-markdown": "^0.2.1",
        "dotenv-safe": "^6.1.0",
        "eslint-plugin-standard": "^4.0.0",
        "jest": "^24.7.1",
        "nodemon": "^1.18.11",
        "opn-cli": "^4.1.0",
        "pre-commit": "^1.2.2",
        "standard": "^12.0.1",
        "superagent": "^5.0.2",
        "supertest": "^4.0.2",
        "supertest-as-promised": "^4.0.2"
    }
}
